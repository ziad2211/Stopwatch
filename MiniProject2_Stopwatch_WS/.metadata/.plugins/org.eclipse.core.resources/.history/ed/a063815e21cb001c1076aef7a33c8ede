#ifndef STOPWATCH_H_
#define STOPWATCH_H_

#include "STD_TYPES.h"
#include "stopwatch_cfg.h"
#include "avr/io.h"
/*******************************************************************************
 *                              Module Data Types                              *
 *******************************************************************************/
/* Structure containing the pin numbers of 7447 BCD */
typedef struct{
	uint8_t BCD_A;
	uint8_t BCD_B;
	uint8_t BCD_C;
	uint8_t BCD_D;
}SevenSegment_ConfigType;

/*******************************************************************************
 *                       External Variables                                    *
 *******************************************************************************/
extern const SevenSegment_ConfigType SevenSegment_ConfigPin;

/*******************************************************************************
 *                      Function Prototypes                                    *
 *******************************************************************************/

/************************************************************************************
* Service Name: SevenSegment_Init
* Sync/Async: Synchronous
* Reentrancy: Non Reentrant
* Parameters (in): None
* Parameters (inout): None
* Parameters (out): None
* Return value: None
* Description: Initializes BCD pins for 7-segment
************************************************************************************/
void SevenSegment_Init(SevenSegment_ConfigType* SevenSegment_ConfigPin);

#endif /* STOPWATCH_H_ */
