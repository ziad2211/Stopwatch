#ifndef STOPWATCH_H_
#define STOPWATCH_H_

#include "STD_TYPES.h"
#include "stopwatch_cfg.h"
#include "avr/io.h"


/*******************************************************************************
 *                      Function Prototypes                                    *
 *******************************************************************************/

/************************************************************************************
* Service Name: SevenSegment_Init
* Sync/Async: Synchronous
* Reentrancy: Non Reentrant
* Parameters (in): - SevenSeg_Mask for pins to 7-segment to enable them
* 				   - BCD_Mask, the mask for the BCD connected pins for the output
* Parameters (inout): None
* Parameters (out): None
* Return value: None
* Description: Initializes BCD and 7-segment pins for 7-segment
************************************************************************************/
void SevenSegment_Init(uint8_t SevenSeg_Mask,\
					   uint8_t BCD_Mask);

/************************************************************************************
* Service Name: SevenSegment_Display
* Sync/Async: Asynchronous
* Reentrancy: Non Reentrant
* Parameters (in): - PinNum for the enable pin of the seven segment
* 				   - DP_Num is the number to be displayed
* Parameters (inout): None
* Parameters (out): None
* Return value: None
* Description: Display the number on seven segment
************************************************************************************/
void SevenSegment_Display(uint8_t PinNum, uint8_t DP_Num);


#endif /* STOPWATCH_H_ */
