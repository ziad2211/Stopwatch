#include <avr/io.h>
#include <util/delay.h>
#include "stopwatch.h"

#define	DP_DELAY	5

uint8_t sec_units_num = 0;
uint8_t sec_tens_num = 0;
uint8_t min_units_num = 0;
uint8_t min_tens_num = 0;
uint8_t hour_units_num = 0;
uint8_t hour_tens_num = 0;

int main(void){
	/* Initialization Code */
SevenSegment_Init();
		

	while(1)
	{
		/* Application Code */
		SevenSegment_Display(SEC_U, sec_units_num);
		_delay_ms(DP_DELAY);
		SevenSegment_Display(SEC_T, sec_tens_num);
		_delay_ms(DP_DELAY);
		SevenSegment_Display(MIN_U, min_units_num);
		_delay_ms(DP_DELAY);
		SevenSegment_Display(MIN_T, min_tens_num);
		_delay_ms(DP_DELAY);
		SevenSegment_Display(HOUR_U, hour_units_num);
		_delay_ms(DP_DELAY);
		SevenSegment_Display(HOUR_T, hour_tens_num);
		_delay_ms(DP_DELAY);
		
		
	}	

	return 0;
}
