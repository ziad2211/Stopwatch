#include "stopwatch.h"

void SevenSegment_Init(uint8_t SevenSeg_Mask,\
					   uint8_t BCD_Mask)
{
	/* Configure the pins for common anode 7-segment BCD */

	/* Configure 7-segment pins as outputs
	 * Initialized 7-segment as turned-off*/
#if   (SEVEN_SEG_PORT_NUM == 'A')
	DDRA |= SevenSeg_Mask;
	PORTA &= ~(SevenSeg_Mask);

#elif (BCD_PORT_NUM == 'C')
	DDRC |= SevenSeg_Mask;
	PORTC &= ~(SevenSeg_Mask);

#elif (BCD_PORT_NUM == 'D')
	DDRD |= SevenSeg_Mask;
	PORTD &= ~(SevenSeg_Mask);

#elif (BCD_PORT_NUM == 'E')
	DDRE |= SevenSeg_Mask;
	PORTE &= ~(SevenSeg_Mask);

#else
	/* no action required */
#endif

	return;
}
