#ifndef STOPWATCH_CFG_H_
#define STOPWATCH_CFG_H_

#define		BCD_TYPE			ANODE 		/* Type of BCD is common anode */
#define		BCD_PORT_NUM		PORTC		/* BCD pins connected to Port C*/
#define		BCD_MASK			0xF0		/* BCD is connected to PC0-PC3, so this mask is to configure */


#endif /* STOPWATCH_CFG_H_ */
